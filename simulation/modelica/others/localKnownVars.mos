// status: correct

loadString("
model localKnownVars
  Real x;
  Real y;

  Real a, b, c;
initial equation
  x = 2;
  y = 3;

equation
  der(x) = a;
  der(y) = b;

  a = sin(x);
  b = cos(y);

  c = b + der(x);
end localKnownVars;
"); getErrorString();

setCommandLineOptions("--preOptModules+=removeLocalKnownVars -d=dumpindxdae"); getErrorString();
simulate(localKnownVars); getErrorString();

val(c, {0.0, 0.3, 0.6}); getErrorString();

